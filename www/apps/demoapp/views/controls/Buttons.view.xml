<View controllerName="ui5strap.demoapp.controllers.Controls" xmlns="ui5strap"
	xmlns:data="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">

	<Container type="Fluid" options="PictureFrame">

			

			<!-- Buttons -->
			<Heading level="1" text="Buttons" />

			<Row>
			<Col columnsSmall="6">

			<Heading level="4" text="Default" />
			
			<!-- Normal buttons -->
			<Paragraph>
					<Button tap="buttonTap" text="Default" severity="Default" />
					<Button tap="buttonTap" text="Primary" severity="Primary" />
					<Button tap="buttonTap" text="Success" severity="Success" />
					<Button tap="buttonTap" text="Info" severity="Info" />
					<Button tap="buttonTap" severity="Warning">
						<Icon icon="exclamation-circle" />
					</Button>
					<Button tap="buttonTap" text="Danger" severity="Danger">
						<Icon icon="exclamation-triangle" />
					</Button>
					<Button tap="buttonTap" type="Link" text="Link" />
			</Paragraph>
	
			<Heading level="4" text="Disabled" />
			
			<!-- Disabled buttons -->
			<Paragraph>
					<Button enabled="false" text="Default" severity="Default" />
					<Button enabled="false" text="Primary" severity="Primary" />
					<Button enabled="false" text="Success" severity="Success" />
					<Button enabled="false" text="Info" severity="Info" />
					<Button enabled="false" text="Warning" severity="Warning" />
					<Button enabled="false" text="Danger" severity="Danger" />
					<Button enabled="false" type="Link" text="Link" />
			</Paragraph>
			
			<Heading level="4" text="Sizing" />
			
			<!-- Large buttons -->
			<Paragraph>
					<Button tap="buttonTap" size="Large" text="Large Button" severity="Primary" />
